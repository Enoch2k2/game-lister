<h1><%= @game.name %> - <%= @list.name %></h1>

<%= link_to "Add Item", new_game_list_list_item_path(@game, @list) %><br/><br/>

<table class="striped">
  <thead>
    <tr>
      <th>
        Item
      </th>
      <th>
        Quantity
      </th>
      <th>
        Completed?
      </th>
    </tr>
  </thead>
  <tbody>
    <% @list.list_items.each do |li| %>
    <tr>
      <td><%= li.item.name %></td>
      <td><%= li.quantity %></td>
      <td><%= li.complete ? "Yes" : link_to("Mark Complete", game_list_complete_list_item_path(@game, @list, li)) %></td>
    </tr>
    <% end %>
  </tbody>
</table>